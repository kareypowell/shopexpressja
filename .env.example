APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=laravel
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DRIVER=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS=null
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_APP_CLUSTER=mt1

MIX_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
MIX_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# Backup Configuration
BACKUP_STORAGE_PATH=
BACKUP_MAX_FILE_SIZE=2048
BACKUP_DISK=local

# Database Backup Settings
DB_BACKUP_TIMEOUT=300
DB_BACKUP_SINGLE_TRANSACTION=true
DB_BACKUP_ROUTINES=true
DB_BACKUP_TRIGGERS=true
DB_BACKUP_LOCK_TABLES=false
DB_BACKUP_ADD_DROP_TABLE=true
DB_BACKUP_EXTENDED_INSERT=true

# File Backup Settings
BACKUP_COMPRESSION_LEVEL=6

# Retention Policy
BACKUP_DATABASE_RETENTION_DAYS=30
BACKUP_FILES_RETENTION_DAYS=14
BACKUP_CLEANUP_ENABLED=true
BACKUP_MIN_BACKUPS_TO_KEEP=3

# Backup Notifications
BACKUP_NOTIFICATION_EMAIL=
BACKUP_NOTIFY_ON_SUCCESS=false
BACKUP_NOTIFY_ON_FAILURE=true
BACKUP_NOTIFY_ON_CLEANUP=false
BACKUP_DAILY_SUMMARY=false
BACKUP_HEALTH_ALERTS=true

# Backup Monitoring
BACKUP_MONITORING_ENABLED=true
BACKUP_STORAGE_WARNING_THRESHOLD=75
BACKUP_STORAGE_CRITICAL_THRESHOLD=90
BACKUP_MAX_AGE_HOURS=48
BACKUP_HEALTH_CHECK_ENABLED=true
BACKUP_SCHEDULE_GRACE_PERIOD=2
BACKUP_RECENT_FAILURE_THRESHOLD=24

# Backup Security
BACKUP_ENCRYPT_BACKUPS=false
BACKUP_ENCRYPTION_KEY=
BACKUP_FILE_PERMISSIONS=0600
BACKUP_DIRECTORY_PERMISSIONS=0700
BACKUP_DOWNLOAD_LINK_TTL=3600

# Backup Scheduling
BACKUP_DEFAULT_FREQUENCY=daily
BACKUP_DEFAULT_TIME=02:00
BACKUP_MAX_CONCURRENT=1
BACKUP_RETRY_ATTEMPTS=1
BACKUP_RETRY_DELAY=300
